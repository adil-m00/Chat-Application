<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/setting_app_bar"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_below="@+id/setting_app_bar"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/profile_image"
        android:inputType="textMultiLine"
        android:hint="User Name"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/profile"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="6dp"
        android:id="@+id/set_user_name"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/set_user_name"
        android:inputType="textMultiLine"
        android:hint="Hi, i am avalilable now"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/edit_status"
        android:background="@drawable/inputs"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="6dp"
        android:id="@+id/set_user_status"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/updateSetitngButton"
        android:layout_marginTop="10dp"
        android:text="Update"
        android:layout_below="@+id/set_user_status"
        android:background="@drawable/buttons"/>


</RelativeLayout>